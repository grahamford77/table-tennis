<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.32.xsd">

    <changeSet id="add-password-reset-fields" author="system">
        <addColumn tableName="users">
            <column name="password_reset_token" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="password_reset_token_expiry" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
